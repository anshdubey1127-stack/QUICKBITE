{
  "info": {
    "name": "QuickBite API",
    "description": "College Food Pre-Ordering System API",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "register"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@college.edu\",\n  \"password\": \"password123\",\n  \"phone\": \"9876543210\",\n  \"college\": \"ABES Engineering College\"\n}"
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "login"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@college.edu\",\n  \"password\": \"password123\"\n}"
            }
          }
        },
        {
          "name": "Verify Token",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/auth/verify",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "verify"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/auth/profile",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "auth", "profile"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "Colleges",
      "item": [
        {
          "name": "Get All Colleges",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/colleges",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "colleges"]
            }
          }
        },
        {
          "name": "Get College by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/colleges/{{college_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "colleges", "{{college_id}}"]
            }
          }
        },
        {
          "name": "Get Cafeterias",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/colleges/cafeterias/{{college_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "colleges", "cafeterias", "{{college_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get All Menu Items",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/menu",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "menu"]
            }
          }
        },
        {
          "name": "Get Menu by Cafeteria",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/menu?cafeteria_id={{cafeteria_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "menu"],
              "query": [
                {
                  "key": "cafeteria_id",
                  "value": "{{cafeteria_id}}"
                }
              ]
            }
          }
        },
        {
          "name": "Get Vegetarian Menu",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/menu?veg_only=true",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "menu"],
              "query": [
                {
                  "key": "veg_only",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get Available Pickup Slots",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/orders/available-slots",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "available-slots"]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "url": {
              "raw": "{{base_url}}/api/orders/create",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "create"]
            },
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"item_id\": \"{{item_id}}\",\n      \"quantity\": 2\n    }\n  ],\n  \"college_id\": \"{{college_id}}\",\n  \"cafeteria_id\": \"{{cafeteria_id}}\",\n  \"pickup_time\": \"1:00 PM\",\n  \"special_instructions\": \"No salt\"\n}"
            }
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/orders/{{order_id}}",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "{{order_id}}"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        },
        {
          "name": "Get User Orders",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/api/orders/user/orders",
              "protocol": "http",
              "host": ["localhost"],
              "port": "5000",
              "path": ["api", "orders", "user", "orders"]
            },
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000"
    },
    {
      "key": "token",
      "value": ""
    },
    {
      "key": "college_id",
      "value": ""
    },
    {
      "key": "cafeteria_id",
      "value": ""
    },
    {
      "key": "item_id",
      "value": ""
    },
    {
      "key": "order_id",
      "value": ""
    }
  ]
}
